<%= simple_form_for(@creature) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :element, :as => :select, :collection => Creature::TYPES %>
    <%= f.input :description %>
    <%= f.input :sprite %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
