<h1>Listing creatures</h1>

<table>
  <thead>
    <tr>
		<th>ID</th>
      <th>Name</th>
      <th>Element</th>
      <th>Description</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creatures.each do |creature| %>
      <tr>
		  <td><%= creature.id %></td>
        <td><%= creature.name %></td>
        <td><%= creature.element %></td>
        <td><%= creature.description %></td>
        <td><%= creature.avatar %></td>
        <td><%= link_to 'Show', creature %></td>
        <td><%= link_to 'Edit', edit_creature_path(creature) %></td>
        <td><%= link_to 'Destroy', creature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Creature', new_creature_path %>
